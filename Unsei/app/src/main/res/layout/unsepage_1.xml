<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EEE5"
    android:orientation="vertical">

    <!-- 제목 : 오늘의 운세 (그림) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_title"
            android:textSize="35dp"
            android:text="오늘의 운세"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/img_purpleball"
            android:src="@drawable/purple_ball"/>

    </LinearLayout>

    <!-- 운세 선택할시 들어가는 페이지 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_birth"
            android:layout_marginTop="80dp"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:text="당신의 정보를 입력해주세요."
            android:fontFamily="serif"
            android:layout_gravity="center" />

        <DatePicker
            android:layout_marginTop="30dp"
            android:id="@+id/datepicker"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:calendarViewShown="false"
            style="@style/ThemeOverlay.AppCompat.DayNight"
            android:datePickerMode="spinner" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:buttonTint="@color/black"
                android:text="양력"/>

            <RadioButton
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:buttonTint="@color/black"
                android:text="음력"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_jachukin"
                android:text="태어난 시"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"/>

            <ImageButton
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:scaleType="fitXY"
                android:background="#F2EEE5"
                android:layout_marginLeft="7dp"
                android:id="@+id/imbtn_downarrow"
                android:src="@drawable/down_arrow"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ok"
            android:background="#F2EEE5"
            android:id="@+id/ok"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:padding="0sp" />

    </LinearLayout>
</LinearLayout>