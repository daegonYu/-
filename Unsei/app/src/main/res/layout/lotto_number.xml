<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools='http://schemas.android.com/tools'
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2EEE5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="랜덤 번호 생성기"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="serif" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/standard"
            android:src="@drawable/img5" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:gravity="center"
        android:orientation="horizontal"/>
    <ImageButton
        android:id="@+id/bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/start2"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/standard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="보너스 번호 생성기"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="serif" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/standard2"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@+id/standard2"
            android:src="@drawable/img5" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll2"
        android:gravity="center"
        android:orientation="horizontal"/>
    <ImageButton
        android:id="@+id/bt2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/start2"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
</LinearLayout>